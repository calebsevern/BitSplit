{
  "manifest_version": 2,

  "name": "Bitsplit",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "accept_false.png",
    "default_popup": "popup.html"
  },
  "background": {
	"scripts": ["bg.js"]
  },
  "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["bg.js"],
        "run_at": "document_end"
        }
    ],
  "permissions": [
	"tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://severn.me/"
  ]
}